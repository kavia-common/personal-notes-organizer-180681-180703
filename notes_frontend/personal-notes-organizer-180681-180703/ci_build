#!/usr/bin/env bash
# CI build entrypoint to ensure Flutter commands run from the correct app directory.
set -euo pipefail

APP_DIR="personal-notes-organizer-180681-180703/notes_frontend"

if [ ! -f "$APP_DIR/pubspec.yaml" ] || [ ! -f "$APP_DIR/lib/main.dart" ]; then
  echo "ci_build: Flutter app not found at $APP_DIR"
  exit 1
fi

echo "ci_build: cd $APP_DIR"
cd "$APP_DIR"

echo "ci_build: flutter pub get"
flutter pub get

echo "ci_build: flutter analyze"
flutter analyze

echo "ci_build: flutter test"
flutter test

echo "ci_build: done"
